<% provide :page_title, 'QR-generator' %>
<% currently_at 'QR-generator' %>

<div class="center-screen">

  <h1>QR code generator</h1>

  <%= form_tag :qr_code_download, method: :get do |f| %>
    <div class="field">
      <%= text_field_tag :content, nil, placeholder: "Text or URL..." %>
    </div>

    <div class="actions">
      <%= submit_tag 'Generate' %>
    </div>
  <% end %>
</div>