<%= tag.article class: 'mb-3 card border-0', id: dom_id(comment) do %>
  <div class="row g-0">
    <div class="col-sm-auto text-sm-center align-self-center">
      <%= link_to image_tag(comment.user.gravatar_url, class: 'rounded m-1'), user_path(comment.user)  %>
      <%= link_to comment.user.nickname, user_path(comment.user) %>
    </div>
    <div class="col-sm">
      <div class="card-body">
        <section class="card-text mb-3">
          <div class="col-sm-9">
            <p>
              <%= sanitize comment.body %>
            </p>
            <% if policy(comment).destroy? %>
              <%= link_to 'Delete',
                polymorphic_path([comment.commentable, comment]),
                class: 'btn btn-danger btn-sm',
                data: {method: :delete, confirm: 'Are you sure?'} %>
            <% end %>
          </div>
        </section>
      </div>
    </div>
  </div>
<% end %>
